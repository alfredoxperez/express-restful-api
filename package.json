{
  "name": "expressRestfulApi",
  "version": "1.0.0",
  "description": "An express js mongodb template app with eslint and flow.",
  "author": "Alfredo Perez",
  "private": true,
  "scripts": {
    "eslint": "eslint .",
    "eslint-fix": "eslint --fix .",
    "flow": "flow",
    "build": "eslint .; babel src/ -d lib/",
    "test": "eslint .; npm run build; NODE_ENV=test mocha --harmony ./test/*.js ./bin/www",
    "test-fast": "NODE_ENV=test mocha --harmony ./test/*.js ./bin/www",
    "dev": "eslint .; npm run build; NODE_ENV=development nodemon --harmony ./bin/www",
    "start": "eslint .; npm run build; NODE_ENV=production nodemon --harmony ./bin/www"
  },
  "dependencies": {
    "JSONPath": "0.11.2",
    "body-parser": "~1.13.2",
    "bunyan": "1.8.12",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "forever": "0.15.3",
    "jade": "1.11.0",
    "merge": "1.2.0",
    "mongoose": "4.12.1",
    "morgan": "~1.6.1",
    "node-schedule": "1.2.4",
    "nodemon": "~1.8.1",
    "random-number": "0.0.9",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "request": "2.81.0",
    "request-promise": "4.2.2",
    "wrench": "~1.5.8"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "^6.24.1",
    "chai": "4.1.2",
    "chai-http": "3.0.0",
    "eslint": "4.8.0",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-node": "5.2.0",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-standard": "3.0.1",
    "flow-bin": "0.56.0",
    "mocha": "3.5.3"
  }
}
